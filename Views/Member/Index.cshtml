@model MembersIndexViewModel

@Model.ActiveStatus
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Attended
            </th>
            <th>
                Inactive
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members) {
            <tr>
                <td>
                    @member.FirstLastName
                </td>
                <td>
                    @member.TotalAttendance
                </td>
                <td>
                    @member.Inactive
                </td>
            </tr>
        }
    </tbody>
</table>
