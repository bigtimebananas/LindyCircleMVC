@model MembersListViewModel

<span class="text-secondary">@Model.ActiveStatus</span>
<table class="table table-bordered table-striped table-sm">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Attended
            </th>
            <th>
                Remaining Punches
            </th>
            <th>
                Status
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model.Members) {
            <tr>
                <td>
                    <a asp-controller="Member" asp-action="Details" asp-route-id="@member.MemberID">@member.FirstLastName</a>
                </td>
                <td>
                    @member.TotalAttendance
                </td>
                <td>
                    @member.RemainingPunches
                </td>
                <td>
                    @member.ActiveText
                </td>
            </tr>
        }
    </tbody>
</table>
